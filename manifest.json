{
  "name": "Smoke Effect",
  "version": "1.0.0",
  "sdkVersion": "2.13.0",
  "description": "Mesmerizing animated smoke effect with customizable colors and fluid dynamics. Premium WebGL shader with Fractal Brownian Motion.",
  "author": "MyWallpaper Community",
  "type": "widget",
  "categories": ["effects", "animations", "backgrounds"],
  "license": "MIT",
  "repository": "https://github.com/rayandu924/mywallpaper-smoke-effect",

  "capabilities": {
    "hotReload": true,
    "systemEvents": ["viewport:resize"]
  },

  "defaultLayout": {
    "xPercent": 0,
    "yPercent": 0,
    "widthPercent": 100,
    "heightPercent": 100,
    "rotation": 0
  },

  "settings": {
    "colorsSection": {
      "type": "section",
      "label": "ðŸŽ¨ Colors"
    },
    "color1": {
      "type": "color",
      "label": "Primary Color",
      "description": "Main smoke color - dominates the effect",
      "default": "#6e0061"
    },
    "color2": {
      "type": "color",
      "label": "Secondary Color",
      "description": "Blends with primary for depth",
      "default": "#ad00a1"
    },
    "color3": {
      "type": "color",
      "label": "Accent Color",
      "description": "Highlights and wisps",
      "default": "#a401d6"
    },
    "color4": {
      "type": "color",
      "label": "Glow Color",
      "description": "Ethereal glow effect",
      "default": "#4a0080"
    },
    "randomizeColorsBtn": {
      "type": "button",
      "buttonLabel": "ðŸŽ² Randomize Colors"
    },

    "animationSection": {
      "type": "section",
      "label": "âš¡ Animation"
    },
    "speed": {
      "type": "range",
      "label": "Flow Speed",
      "description": "How fast the smoke moves",
      "min": 0.05,
      "max": 1,
      "step": 0.05,
      "default": 0.2
    },
    "turbulence": {
      "type": "range",
      "label": "Turbulence",
      "description": "Chaos and swirl intensity",
      "min": 0.1,
      "max": 2,
      "step": 0.1,
      "default": 0.9
    },
    "density": {
      "type": "range",
      "label": "Smoke Scale",
      "description": "Size of smoke patterns",
      "min": 1,
      "max": 15,
      "step": 0.5,
      "default": 7
    },

    "effectsSection": {
      "type": "section",
      "label": "âœ¨ Effects"
    },
    "intensity": {
      "type": "range",
      "label": "Color Intensity",
      "description": "Brightness and vibrancy",
      "min": 0.1,
      "max": 2,
      "step": 0.1,
      "default": 0.9
    },
    "fadeEdge": {
      "type": "select",
      "label": "Smoke Origin",
      "description": "Where the smoke comes from",
      "default": "bottom",
      "options": [
        { "value": "none", "label": "Everywhere" },
        { "value": "bottom", "label": "From Bottom" },
        { "value": "top", "label": "From Top" },
        { "value": "both", "label": "Center Band" },
        { "value": "radial", "label": "Center Radial" }
      ]
    }
  }
}
